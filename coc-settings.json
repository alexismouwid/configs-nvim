{
  "suggest.enablePreview": true,
  "suggest.noselect": false,
  "suggest.triggerCompletionWait": 0,
  "suggest.minTriggerInputLength": 1,
  "suggest.maxCompleteItemCount": 20,

  "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "json", "html", "css"],
  
  "diagnostic.virtualText": true,
  "diagnostic.signs": true,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  
  "languageserver": {
    "tsserver": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["typescript", "javascript"],
      "rootPatterns": ["package.json", "tsconfig.json", ".git"],
      "settings": {}
    }
  },

  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.colorSupport": true,

  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "typescript", "vue"],

  "prettier.enable": true,
  "prettier.requireConfig": true,

  "coc.source.buffer.enable": true,
  "coc.source.file.enable": true,
  "coc.source.path.enable": true,
  "coc.source.npm.enable": true
}

